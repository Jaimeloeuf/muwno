{
  "name": "server",
  "version": "0.0.0",
  "description": "API service built with Nest",
  "author": "JJ",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/main",
    "serve": "nest start --path tsconfig.json --watch",
    "start:debug": "nest start --path tsconfig.json --watch --debug",
    "prebuild": "npx rimraf dist .tsbuildinfo",
    "build": "nest build --path tsconfig.build.json",
    "postbuild": "node ./scripts/createServerVersion.mjs",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "docker:build": "docker build --platform linux/amd64 -t asia.gcr.io/thepmftool/api -f ./server.Dockerfile ../",
    "docker:run": "docker run -d -p 3000:3000 --rm --name thepmftool --env-file .env asia.gcr.io/thepmftool/api",
    "docker:run-attached": "docker run -p 3000:3000 --rm --name thepmftool --env-file .env asia.gcr.io/thepmftool/api",
    "docker:push": "docker push asia.gcr.io/thepmftool/api",
    "deploy": "npm run docker:build && npm run docker:push",
    "prisma:script": "npx ts-node ./prisma/script/script.ts",
    "stripe:setup": "npx ts-node ./scripts/stripe/index.ts",
    "stripe:listen": "stripe listen --forward-to localhost:3000/v1/subscription/stripe/webhook",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "prisma": {
    "seed-comment": "Use 'npx prisma db seed' to run the seeding script",
    "seed": "npx ts-node --esm ./prisma/seeds/index.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.5",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.5",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/throttler": "^4.2.1",
    "@prisma/client": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.9",
    "domain-model": "file:../domain",
    "firebase-admin": "^11.10.1",
    "joi": "^17.9.2",
    "openai": "^3.3.0",
    "papaparse": "^5.4.1",
    "postmark": "^3.0.19",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "stripe": "^13.1.0",
    "tiny-json-http": "^7.5.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.8",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.5",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.69",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.1",
    "@types/node": "^18.11.18",
    "@types/papaparse": "^5.3.7",
    "@types/supertest": "^2.0.12",
    "@types/tiny-json-http": "^7.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "dotenv": "^16.3.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "prettier": "^2.8.8",
    "prisma": "^5.0.0",
    "prisma-dbml-generator": "^0.10.0",
    "rimraf": "^5.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6"
  }
}